<a href="{{ product.url }}" class="card-slide-product">
  <div class="card-slide-product__image ibg">
    {% if product.featured_image.src %}
      {{ product.featured_image.src | image_url: width: '500px' | image_tag }}
    {% else %}
      {{ 'collection-4' | placeholder_svg_tag }}
    {% endif %}
  </div>
  <div class="card-slide-product__info">
    <h3 class="card-slide-product__title">{{ product.title }}</h3>
    <div class="card-slide-product__prises">
      <p class="card-slide-product__prise">{{ product.price | money }}</p>
      <span class="card-slide-product__comparePrice">{{ product.compare_at_price | money }}</span>
    </div>
  </div>
</a>
