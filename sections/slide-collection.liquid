{{ 'section-slider-collection.css' | asset_url | stylesheet_tag }}

{% liquid
  if section.settings.auto_rotate
    assign autoplay = true
  endif
  assign speed = section.settings.change_slides_speed | append: '000'
%}

<div
  data-autoplay="{{ autoplay }}"
  data-speed="{{ speed }}"
  class="section-slider-collection__container color-{{ section.settings.color_scheme }}"
>
  <div class="section-slider-collection__inner">
    <div class="swiper">
      <div class="swiper-wrapper">
        {% for slide in section.blocks %}
          {% if slide.type == 'slide' %}
            <div class="swiper-slide">
              {% render 'card-slide-collection', slide: slide %}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="section-slider-collection swiper-pagination"></div>
    </div>
  </div>
</div>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    const IsAutoplay = document.querySelector('.section-slider-collection__container[data-autoplay="true"]');
    const speed = +document
      .querySelector('.section-slider-collection__container[data-speed]')
      .getAttribute('data-speed');
    let autoConfig;

    if (IsAutoplay) {
      autoConfig = {
        autoplay: {
          delay: speed,
        },
      };
    }

    const config = {
      loop: true,
      slidesPerView: 1,
      pagination: {
        el: '.section-slider-collection .swiper-pagination',
        clickable: 'true',
      },
      ...autoConfig,
    };

    const sectionSliderCollection = new Swiper('.section-slider-collection .swiper', config);
  });
</script>

{% schema %}
{
  "name": "Slide collection",
  "tag": "section",
  "class": "section-slider-collection",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "t:sections.slideshow.settings.auto_rotate.label",
      "default": false
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 2,
      "max": 20,
      "step": 2,
      "unit": "s",
      "label": "t:sections.slideshow.settings.change_slides_speed.label",
      "default": 6
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-3"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "t:sections.slideshow.blocks.slide.name",
      "limit": 6,
      "settings": [
        {
          "type": "collection",
          "id": "slide_collection",
          "label": "Collection slide"
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Image slide",
          "label": "t:sections.slideshow.blocks.slide.settings.heading.label"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.slideshow.blocks.slide.settings.button_label.label",
          "info": "t:sections.slideshow.blocks.slide.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.slideshow.blocks.slide.settings.link.label"
        },
        {
          "type": "checkbox",
          "id": "show_text_box",
          "label": "t:sections.slideshow.blocks.slide.settings.show_text_box.label",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slide collection",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
